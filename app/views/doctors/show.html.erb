<h1><%= @doctor.name %></h1>
  <ul>
    <li> Specialty: <%= @doctor.specialty %></li>
    <li> University: <%= @doctor.university %></li>
    <li> Hospital: <%= @doctor.hospital.name %> </li>
    <li> Patients: 
      <ul>
        <% @doctor.patients.each do |patient| %>
          <li id="patient-<%= patient.id %>"> <%= patient.name %> 
          <%= button_to "Remove Patient", doctor_patient_path(@doctor.id, patient.id), method: :delete%></li>
        <% end %>
      </ul>
    </li>
  </ul>